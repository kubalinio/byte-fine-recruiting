{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ap2p/api-client": ["libs/core/api-client/src/index.ts"],
      "@ap2p/auth": ["libs/auth/src/index.ts"],
      "@ap2p/ui": ["libs/shared/ui/src/index.ts"],
      "@ap2p/utils": ["libs/shared/utils/src/index.ts"],
      "api/*": ["apps/ap2p/src/api/*"],
      "assets/*": ["./apps/ap2p/src/assets/*"],
      "context/*": ["apps/ap2p/src/context/*"],
      "features/*": ["apps/ap2p/src/features/*"],
      "hooks/*": ["apps/ap2p/src/hooks/*"],
      "i18n/*": ["apps/ap2p/src/i18n/*"],
      "integrations/*": ["apps/ap2p/src/integrations/*"],
      "providers/*": ["apps/ap2p/src/providers/*"],
      "types/*": ["apps/ap2p/src/types/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
